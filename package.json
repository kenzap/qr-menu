{
    "name": "kenzap-extension-dashboard",
    "version": "1.0.0",
    "description": "Bundle JS files with support for ES2015/16, minification and sourcemaps using Rollup, optimized for Kenzap extension logics",
    "author": "Kenzap",
    "private": false,
    "scripts": {
        "format": "prettier --write '**/*.js' '**/*.scss' '**/*.html'",
        "watch": "npm-run-all --parallel watch:*",
        "watch:sass": "sass --watch src/:public/",
        "watch:scripts": "npm run build-dev:scripts -- -w",
        "watch:files": "nodemon -e '*' --ignore '*.js' --ignore '*.scss' --watch src --exec 'npm run copy'",
        "watch:serve": "serve public",
        "copy": "copyfiles -e './src/_/**' -e './src/**/*.scss' -e './src/**/*.js' --up 1 './src/**/*' 'public'; copyfiles --up 2 './public/home/*' 'public'",
        "home": "copyfiles --up 2 './public/home/*' 'public'",
        "build": "rm -R -f public; mkdir public; npm-run-all build:*",
        "build:sass": "sass --no-source-map src/:public/",
        "build:copy": "copyfiles -e './src/_/**' -e './src/**/*.scss' -e './src/**/*.js' --up 1 './src/**/*' 'public'",
        "build:scripts": "BABEL_ENV=production rollup -c",
        "build:home": "copyfiles --up 2 './public/home/*' 'public'",
        "i18n": "",
        "build-prod": "npm-run-all build-prod:scripts build:*",
        "build-dev:scripts": "rollup -c",
        "build-prod:scripts": "BABEL_ENV=production rollup -c"
    },
    "license": "Unlicense",
    "dependencies": {
        "@babel/core": "^7.13.14",
        "@babel/preset-env": "^7.13.12",
        "@kenzap/k-cloud": "^1.0.0",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^18.0.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "copyfiles": "^2.4.1",
        "glob": "^7.1.6",
        "markdown-it": "^12.2.0",
        "markdown-it-replace-link": "^1.1.0",
        "node-fetch": "^3.0.0",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5",
        "qrcode-generator-es6": "^1.1.4",
        "roddeh-i18n": "^1.2.0",
        "rollup": "^2.44.0",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.32.8"
    },
    "devDependencies": {
        "prettier": "^2.2.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-replace-html-vars": "^1.0.3",
        "rollup-plugin-serve": "^1.1.0",
        "serve": "^13.0.2",
        "transformation-matrix": "^2.11.1"
    }
}
